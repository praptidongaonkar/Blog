<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Edit Blog</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
      <h2 class="fw-bold mb-4">Edit Blog</h2>

      <form action="/blog/edit/<%= blog._id %>" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Blog Title</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            value="<%= blog.title %>"
            required
          />
        </div>

        <div class="mb-3">
          <label for="body" class="form-label">Blog Content</label>
          <textarea
            class="form-control"
            id="body"
            name="body"
            rows="6"
            required
          ><%= blog.body %></textarea>
        </div>

        <div class="mb-3">
          <label for="coverImage" class="form-label">Cover Image</label>
          <input type="file" class="form-control" id="coverImage" name="coverImage" />
          <% if (blog.coverImageURL) { %>
            <div class="mt-2">
              <p>Current Image:</p>
              <img src="<%= blog.coverImageURL %>" alt="Current Cover" class="img-thumbnail" style="max-width: 200px;" />
            </div>
          <% } %>
        </div>

        <button type="submit" class="btn btn-success">Update Blog</button>
        <a href="/user/blogs" class="btn btn-secondary">Cancel</a>
      </form>
    </div>

      <%- include('./partials/footer') %>
    <%- include('./partials/script') %>
  </body>
</html>
